{
  "version": 2,

  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],

  "routes": [
    {
      "src": "^/api(/.*)?$",
      "dest": "/api/index.js"
    },

    {
      "src": "^/assets/(.*)$",
      "dest": "/assets/$1"
    },

    {
      "src": "^/favicon\\.ico$",
      "dest": "/favicon.ico"
    },

    {
      "src": "^/(.*\\.js)$",
      "dest": "/$1"
    },

    {
      "src": "^/(.*\\.css)$",
      "dest": "/$1"
    },

    {
      "src": "^/(.*)$",
      "dest": "/index.html"
    }
  ]
}
